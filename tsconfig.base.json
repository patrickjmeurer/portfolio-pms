{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@contracts/*": ["packages/contracts/src/*"],
      "@domain-profile/*": ["packages/domain/profile/src/*"],
      "@domain-experience/*": ["packages/domain/experience/src/*"],
      "@domain-project/*": ["packages/domain/project/src/*"]
    }
  }
}
